<%INIT>
  use Authen::Bitcard;
  my $bc = Authen::Bitcard->new;
  die 'No Bitcard auth token provided as $BitcardToken in the RT configuration file.' unless $RT::BitcardToken;
  $bc->token($RT::BitcardToken);
  my $return_url = $RT::WebURL;
</%INIT>

<%PERL>
  $session{'BitcardUser'} = undef;
  $m->redirect( $bc->logout_url( r => $return_url ) );
</%PERL>
