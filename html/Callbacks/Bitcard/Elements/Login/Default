<%INIT>
  use Authen::Bitcard;
  my $bc = Authen::Bitcard->new;
  die 'No Bitcard auth token provided as $BitcardToken in the RT configuration file on this server' unless $RT::BitcardToken;
  $bc->token($RT::BitcardToken);
  $bc->info_required('email,username');
  $bc->info_optional('name');
  my $login_url = $bc->login_url( r => $RT::WebURL . 'index.html');
</%INIT>
<div class="input-row">
  Have a <a href="https://bitcard.org">Bitcard</a> account?
  <a href="<% $login_url %>">Log in with it now</a>.
</div>
<div class="input-row">
  <a href="https://bitcard.org/register?bc=%3D%3A%3Ap%3Dbc">
  Get a Bitcard account.</a>
</div>
